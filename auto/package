#!/bin/bash
set -euo pipefail
cd $(dirname $0)/..

source ./auto/set-env

display_status "Package local lambdafunction to ${DEPLOYMENT_BUCKET_NAME} backage and output the tranformed template ${TRANFORMED_TEMPLATE} to ${AWS_CLOUFROMATION_TEMPLATE_URL} folder"

aws cloudformation package \
  --template-file ${AWS_CLOUFROMATION_TEMPLATE_URL}/template.yml \
  --s3-bucket ${DEPLOYMENT_BUCKET_NAME} \
  --s3-prefix lambda/week2 \
  --output-template-file ${AWS_CLOUFROMATION_TEMPLATE_URL}/${TRANFORMED_TEMPLATE}
