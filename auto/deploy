#!/bin/bash
set -euo pipefail
cd $(dirname $0)/..

source ./auto/set-env

./auto/package

display_status "Deploy ${STACK_NAME} stack"

aws cloudformation deploy \
  --template-file ${AWS_CLOUFROMATION_TEMPLATE_URL}/${TRANFORMED_TEMPLATE} \
  --stack-name ${STACK_NAME} \
  --capabilities CAPABILITY_NAMED_IAM
